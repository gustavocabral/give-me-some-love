<div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email address</label>
    <div class="col-sm-4">
        {{input type="email" class="form-control" id="email" value=email placeholder="Enter your Email"}}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
        <button type="button" class="btn btn-default btn-lg btn-block" {{action "register" email}}
                disabled={{disableRegister}}>
            Register
        </button>
    </div>
</div>
