<form class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{model.name}}</p>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{model.email}}</p>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Balance</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{model.balance}}</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            <button type="button" class="btn btn-default btn-lg btn-block" {{action "give"}}>Give</button>
            <button type="button" class="btn btn-default btn-lg btn-block" {{action "get"}}>Get</button>
        </div>
    </div>
</form>