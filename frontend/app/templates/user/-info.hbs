<div class="form-group">
    <label class="col-sm-2 control-label" for="myId">My ID</label>

    <div id="myId" class="col-sm-10" aria-describedby="receiverHelp">
        <img class="qr-code-image" alt="QR Code with user ID"
             src='https://chart.googleapis.com/chart?chs=250x250&cht=qr&chld=Q|1&chl="{{model.qrCode}}"'/>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-12">
        <button type="button" class="btn btn-default btn-lg btn-block" {{action "scan"}}>Scan</button>
    </div>
</div>
