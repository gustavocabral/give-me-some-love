<div class="form-group">
    <label class="col-sm-2 control-label">Receiver ID</label>

    <div class="col-sm-10">
        {{#if isIOS}}
            {{qrcode-processor readValue=receiver}}
        {{else}}
            {{qrcode-camera readValue=receiver}}
        {{/if}}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">To</label>

    <div class="col-sm-10">
        <p class="form-control-static">{{receiver}}</p>
    </div>
</div>
<div class="form-group">
    <label for="amount" class="col-sm-2 control-label">Amount</label>
    <div class="col-sm-10">
        <div class="input-group">
            <div class="input-group-addon">$</div>
            {{input value=amount type="number" class="form-control" placeholder="Enter amount"}}
            <div class="input-group-addon">.00</div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-12">
        <button type="button" class="btn btn-default btn-lg btn-block" disabled={{disableConfirm}}
            {{action "confirm"}}>
            Confirm
        </button>
    </div>
</div>