<h3>Give</h3>

{{#if transaction}}
    {{#if showNewBalance}}
        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">New balance</label>

            <div class="col-sm-4">
                <p class="form-control-static">{{model.balance}}</p>
            </div>
        </div>
    {{else}}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="transaction">Transaction</label>

            <div id="transaction" class="col-sm-10" aria-describedby="receiverHelp">
                <img class="qr-code-image" alt="Transaction QR Code"
                     src='https://chart.googleapis.com/chart?chs=250x250&cht=qr&chld=Q|1&chl="{{transaction}}"'/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">To</label>

            <div class="col-sm-4">
                <p class="form-control-static">{{#if receiver}}{{receiver}}{{else}}Please scan receiver's ID{{/if}}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">Amount</label>

            <div class="col-sm-4">
                <p class="form-control-static">{{amount}}</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="button" class="btn btn-default btn-lg btn-block" {{action "send"}}>Send</button>
            </div>
        </div>
    {{/if}}
{{else}}
    <div class="form-group">
        <label class="col-sm-2 control-label">Receiver ID</label>

        <div class="col-sm-4">
            {{qrcode-camera readValue=receiver}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">To</label>

        <div class="col-sm-4">
            <p class="form-control-static">{{receiver}}</p>
        </div>
    </div>
    <div class="form-group">
        <label for="amount" class="col-sm-2 control-label">Amount</label>
        <div class="col-sm-4">
            <div class="input-group">
                <div class="input-group-addon">$</div>
                {{input value=amount type="number" class="form-control" placeholder="Enter amount"}}
                <div class="input-group-addon">.00</div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="button" class="btn btn-default btn-lg btn-block" disabled={{disableConfirm}}
                {{action "confirm"}}>
                Confirm
            </button>
        </div>
    </div>
{{/if}}

{{partial 'user/menu'}}