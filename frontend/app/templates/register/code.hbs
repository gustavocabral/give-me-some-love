<div class="form-group">
    <label for="code" class="col-sm-2 control-label">Code</label>
    <div class="col-sm-4">
        {{input type="password" class="form-control" autocomplete="off" value=code}}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
        <button type="button" class="btn btn-default btn-lg btn-block" {{action "confirmCode" code}}
                disabled={{disableConfirm}}>
            Confirm
        </button>
    </div>
</div>